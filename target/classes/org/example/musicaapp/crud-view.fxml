<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.musicaapp.CrudController"
      spacing="10" style="-fx-padding:12;">
    <Label text="Projeto 2 - CRUD Música" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <tabs>

            <!-- ARMA -->
            <Tab text="Arma">
                <VBox spacing="8" style="-fx-padding:10;">
                    <HBox spacing="6">
                        <TextField fx:id="armaId" promptText="ID" prefWidth="90" editable="false" disable="true"/>
                        <TextField fx:id="armaModelo" promptText="Modelo"/>
                        <TextField fx:id="armaQtd" promptText="Qtd tiros"/>
                        <TextField fx:id="armaDono" promptText="Dono"/>
                    </HBox>
                    <HBox spacing="6">
                        <Button text="Novo" onAction="#onArmaNew"/>
                        <Button text="Salvar (Create)" onAction="#onArmaCreate"/>
                        <Button text="Listar" onAction="#onArmaRead"/>
                        <Button text="Atualizar" onAction="#onArmaUpdate"/>
                        <Button text="Excluir" onAction="#onArmaDelete"/>
                        <Button text="Executar método" onAction="#onArmaExecute"/>
                    </HBox>
                    <TableView fx:id="armaTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="armaColId" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="armaColModelo" text="Modelo" prefWidth="160"/>
                            <TableColumn fx:id="armaColQtd" text="Qtd Tiros" prefWidth="120"/>
                            <TableColumn fx:id="armaColDono" text="Dono" prefWidth="160"/>
                        </columns>
                    </TableView>
                    <TextArea fx:id="armaMethodOut" promptText="Saída do método da classe Arma" prefRowCount="2"/>
                </VBox>
            </Tab>

            <!-- CIDADE -->
            <Tab text="Cidade">
                <VBox spacing="8" style="-fx-padding:10;">
                    <HBox spacing="6">
                        <TextField fx:id="cidadeId" promptText="ID" prefWidth="90" editable="false" disable="true"/>
                        <TextField fx:id="cidadeNome" promptText="Nome"/>
                        <TextField fx:id="cidadeRegiao" promptText="Região"/>
                        <CheckBox fx:id="cidadeViolenta" text="Violenta?"/>
                    </HBox>
                    <HBox spacing="6">
                        <Button text="Novo" onAction="#onCidadeNew"/>
                        <Button text="Salvar (Create)" onAction="#onCidadeCreate"/>
                        <Button text="Listar" onAction="#onCidadeRead"/>
                        <Button text="Atualizar" onAction="#onCidadeUpdate"/>
                        <Button text="Excluir" onAction="#onCidadeDelete"/>
                        <Button text="Executar método" onAction="#onCidadeExecute"/>
                    </HBox>
                    <TableView fx:id="cidadeTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="cidadeColId" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="cidadeColNome" text="Nome" prefWidth="160"/>
                            <TableColumn fx:id="cidadeColRegiao" text="Região" prefWidth="160"/>
                            <TableColumn fx:id="cidadeColViolenta" text="Violenta?" prefWidth="120"/>
                        </columns>
                    </TableView>
                    <TextArea fx:id="cidadeMethodOut" promptText="Saída do método da classe Cidade" prefRowCount="2"/>
                </VBox>
            </Tab>

            <!-- PERSONAGEM -->
            <Tab text="Personagem">
                <VBox spacing="8" style="-fx-padding:10;">
                    <HBox spacing="6">
                        <TextField fx:id="persId" promptText="ID" prefWidth="90" editable="false" disable="true"/>
                        <TextField fx:id="persNome" promptText="Nome"/>
                        <TextField fx:id="persOrigem" promptText="Origem"/>
                        <CheckBox fx:id="persVivo" text="Vivo?"/>
                    </HBox>
                    <HBox spacing="6">
                        <Button text="Novo" onAction="#onPersNew"/>
                        <Button text="Salvar (Create)" onAction="#onPersCreate"/>
                        <Button text="Listar" onAction="#onPersRead"/>
                        <Button text="Atualizar" onAction="#onPersUpdate"/>
                        <Button text="Excluir" onAction="#onPersDelete"/>
                        <Button text="Executar método" onAction="#onPersExecute"/>
                    </HBox>
                    <TableView fx:id="persTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="persColId" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="persColNome" text="Nome" prefWidth="160"/>
                            <TableColumn fx:id="persColOrigem" text="Origem" prefWidth="160"/>
                            <TableColumn fx:id="persColVivo" text="Vivo?" prefWidth="120"/>
                        </columns>
                    </TableView>
                    <TextArea fx:id="persMethodOut" promptText="Saída do método da classe Personagem" prefRowCount="2"/>
                </VBox>
            </Tab>

        </tabs>
    </TabPane>
    <Label fx:id="status" text=""/>
</VBox>
